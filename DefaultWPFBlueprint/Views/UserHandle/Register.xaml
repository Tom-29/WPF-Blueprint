<UserControl x:Class="DefaultWPFBlueprint.Views.UserHandle.Register"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DefaultWPFBlueprint.Views.UserHandle"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <TextBlock Text="Registrieren" FontSize="18" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10"/>
                
            <TextBlock Text="Benutzername:" FontSize="14" FontWeight="SemiBold"/>
            <TextBox x:Name="TxtUsername" Margin="0,5,0,10"/>

            <TextBlock Text="Passwort:" FontSize="14" FontWeight="SemiBold"/>
            <PasswordBox x:Name="TxtPassword" Margin="0,5,0,10"/>

            <Button Content="Registrieren" Click="RegisterUser" FontWeight="Bold"/>
            <Button Content="Zurück zum Login" Click="OpenLogin" FontWeight="Bold" Margin="0,5,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
